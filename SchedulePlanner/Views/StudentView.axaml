<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:SchedulePlanner.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SchedulePlanner.Views.StudentView"
             x:DataType="viewModels:StudentViewModel" Margin="20 0 0 0">
    <StackPanel VerticalAlignment="Center">
        <TextBlock FontSize="16" Text="{Binding Status}" Margin="0 0 0 15"/>
        <ContentControl HorizontalAlignment="Left" Content="{Binding Content}"/>
    </StackPanel>
</UserControl>
